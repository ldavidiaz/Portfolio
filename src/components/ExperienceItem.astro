---
interface Props {
  lang: string;
  title: string;
  date?: string;
  description?: string;
  link?: string;
  class?: string;
}
const { lang, title, date, description, link } = Astro.props;
const { class: className } = Astro.props;
const labelLink = (lang === 'es') ? 'Saber m√°s...' : 'Learn more...';
const isLink =  false//(link != "#") ? true : false; // TODO descomentar cuando tenga las paginas de experiencia explicando lo que se ha hecho
---

<div class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"></div>

<time class="mb-1 text-sm sm:text-base lg:text-sm font-normal leading-none text-white-400 dark:text-white-500">
  {date}
</time>

<h3 class="text-base sm:text-lg lg:text-lg font-semibold text-white-900">
  {title}
</h3>

<p class="mb-4 text-sm sm:text-base lg:text-base font-normal text-gray-300">
  {description}
</p>

{isLink && (
  <a
    href={link}
    class="inline-flex items-center px-4 py-2 text-xs sm:text-sm lg:text-sm font-medium text-white-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-blue-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-100 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
  >
    {labelLink}
    <svg
      class="w-3 sm:w-4 h-3 sm:h-4 ms-2 rtl:rotate-180"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 5h12m0 0L9 1m4 4L9 9"
      />
    </svg>
  </a>
)}
