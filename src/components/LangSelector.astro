---
const { lang } = Astro.props;
---


<div class="relative inline-block text-left">
  <button
    id="language-button"
    onclick="toggleLanguageMenu()"
    class="h-auto py-1 px-2 rounded-lg bg-gray-800 text-white text-center sm:text-lg md:text-xl"
  >
    🌐 {lang.toUpperCase()} 
    <span id="select-arrow" class="inline-block transition-transform duration-200">
        ▼
    </span>
  </button>
    <ul
    id="language-menu"
    class="absolute right-0 mt-2 w-24 bg-white border rounded-lg shadow-lg hidden z-50"
    >
    <li>
        <button
        class="block w-full px-4 py-2 border-b border-gray-100 text-black hover:bg-yellow-400 rounded-t-lg"
        onclick="changeLanguage('es')"
        >ES</button>
    </li>
    <li>
        <button
        class="block w-full px-4 py-2 text-black hover:bg-yellow-400 rounded-b-lg"
        onclick="changeLanguage('en')"
        >EN</button>
    </li>
    </ul>

</div>
